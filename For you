<style>
  body { background:#111; }
  .box {
    border:1px solid #222;
    width:20px;
    height:20px;
    margin:2px;
    float:left;
    background:#F39;
    box-shadow: 0 0 10px #F39;
    opacity:0;
    transition:opacity 0.3s;
  }
